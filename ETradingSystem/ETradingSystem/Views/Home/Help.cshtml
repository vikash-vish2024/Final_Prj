
@{
    ViewBag.Title = "Help";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Help Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .help-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 400px;
            text-align: center;
        }

            .help-container h2 {
                margin-bottom: 20px;
            }

        .help-content {
            margin-bottom: 20px;
        }

            .help-content p {
                margin-bottom: 10px;
            }

        .help-link {
            color: #007bff;
            text-decoration: none;
        }

            .help-link:hover {
                text-decoration: underline;
            }

        button[type="button"] {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 3px;
            cursor: pointer;
            font-size: 16px;
        }

            button[type="button"]:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="help-container">
        <h2>Need Help?</h2>
        <hr />
        <div class="help-content">
            <p>If you need assistance, please contact Vikash....</p>
            <p>Email: vikashv@infinite.com</p>
            <p>Phone: +91 (979) 499-6641</p>
        </div>
    </div>
</body>

</html>




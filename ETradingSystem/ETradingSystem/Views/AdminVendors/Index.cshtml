@model IEnumerable<ETradingSystem.Models.Vendor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }

        h2 {
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            border: 1px solid #ddd;
        }

        th, td {
            padding: 8px;
            border: 1px solid #ddd;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        td:last-child {
            text-align: center;
        }

        .action-buttons {
            display: inline-block;
            margin-right: 5px;
        }
    </style>
</head>
<body>

    <div class="container">
        <br /><br />
        <h2><center>Vendors Information</center></h2>

        <!-- Create New button -->
        <p>
            <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>Vendor Name</th>
                    <th>Vendor Email</th>
                    <th>Mobile Number</th>
                    <th>Address</th>
                    <th>Category</th>
                    <th>Vendor Age</th>
                    <th>Password</th>
                    <th>Hint ID</th>
                    <th>Hint Answer</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Vendor_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Vendor_Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Mobile_Number)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.Category)</td>
                        <td>@Html.DisplayFor(modelItem => item.Vendor_Age)</td>
                        <td>@Html.DisplayFor(modelItem => item.Passowrd)</td>
                        <td>@Html.DisplayFor(modelItem => item.Hint_Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Hint_Answer)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td class="action-buttons">
                            <a href="@Url.Action("Details", new { id = item.Vendor_Id })" class="btn btn-info">Details</a>
                            <button onclick="confirmDelete('@item.Vendor_Id')" class="btn btn-danger">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>
        function confirmDelete(vendorId) {
            if (confirm('Are you sure you want to delete this vendor?')) {
                window.location.href = '@Url.Action("Delete", new { id = "" })' + vendorId;
            }
        }
    </script>
</body>
</html>
